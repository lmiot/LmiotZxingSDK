<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >




    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        >
    </SurfaceView>

    <com.lmiot.androidtools_library.zxing.view.ViewfinderView
        android:id="@+id/viewfinderview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:paddingTop="20dp"
        />

    <TextView
        android:id="@+id/id_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="@string/auto_scan_tip"
        android:textSize="15sp"
        android:layout_marginBottom="50dp"
        android:textColor="#FFFFFF"
        >
    </TextView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >

        <ImageView
            android:id="@+id/id_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/zxing_back"
            android:padding="5dp"
            />

        <ImageView
            android:id="@+id/id_light"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/zxing_light"
            android:padding="5dp"
            />

        <ImageView
            android:id="@+id/id_photo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/zxing_img"
            android:padding="5dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/id_create"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/zxing_add"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/id_text"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        />


</RelativeLayout>